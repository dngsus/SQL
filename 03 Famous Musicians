/* This project uses the following data: */

CREATE TABLE artists
    (id INTEGER PRIMARY KEY AUTOINCREMENT,
    stage_name TEXT,
    birth_name TEXT,
    no_albums INTEGER,
    no_grammies INTEGER,
    no_top_100_songs INTEGER);
    
